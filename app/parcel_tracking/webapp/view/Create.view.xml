<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="parceltracking.controller.Create">
  <Page id="createPage" title="{i18n>createTitle}"
  showNavButton="true" 
  navButtonPress=".onNavBack">
    <content>
      <VBox id="createVbox">
        <Input id="packageNumber" value="" placeholder="Package Number" />
        <Input id="receiverId" value="" placeholder="Receiver" />
        <Input id="shippingAddress" value="" placeholder="Shipping Address" />
        <Button id="saveButton" text="Save" press=".onSave" />
        <Button id="deleteButton" text="Delete" press=".onDelete" />
      </VBox>
    </content>
  </Page>
</mvc:View>