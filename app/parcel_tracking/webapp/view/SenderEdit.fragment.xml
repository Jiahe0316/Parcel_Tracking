<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <HBox
        id="_IDGenHBox1"
        justifyContent="End"
        class="responsiveHBox"
    />
    <f:Form
        id="packageEditForm"
        editable="false"
    >
        <f:layout>
            <f:ResponsiveGridLayout
                id="_IDGenResponsiveGridLayout12"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="true"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            />
        </f:layout>

        <f:formContainers>
            <!-- Left Side: Package Info -->
            <f:FormContainer
                id="_IDGenFormContainer12"
                title="{i18n>packageInfoTitle}"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement122"
                        label="{i18n>packageStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus1"
                                class="customStatus"
                                text="{shippingStatus}"
                                icon="sap-icon://shipping-status"
                                state="{path: 'shippingStatus', formatter: '.stateFormatter'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement12"
                        label="{i18n>packageIDLabel}"
                        visible="false"
                    >
                        <f:fields>
                            <Input
                                value="{ID}"
                                id="packageID"
                                editable="false"
                                visible="false"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22"
                        label="{i18n>packageNumberLabel}"
                    >
                        <f:fields>
                            <Input
                                value="{path: 'packageNumber', mode: 'sap.ui.model.BindingMode.OneWay'}"
                                id="packageNumber"
                                editable="false"
                                change="onInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2222"
                        label="{i18n>packageWeightLabel}"
                    >
                        <f:fields>
                            <Input
                                value="{weight}"
                                id="packageWeight"
                                editable="false"
                                change="onDigitInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22222"
                        label="{i18n>packageHeightLabel}"
                    >
                        <f:fields>
                            <Input
                                value="{height}"
                                id="packageHeight"
                                editable="false"
                                change="onDigitInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <!-- <f:FormElement id="_IDGenFormElementUpdateStatus">
              <f:fields>
                <Button id="updateStatusButton" tooltip="Update delivery status" icon="sap-icon://action" text="Update status" type="Emphasized" 
                        press="onUpdateStatus" ariaLabelledBy="actionButtonLabel" class="responsiveButton" enabled="false"/>
              </f:fields>
            </f:FormElement> -->
                </f:formElements>
            </f:FormContainer>

            <!-- Right Side: Package Destination and Receiver Details -->
            <f:FormContainer
                id="_IDGenFormContainer1222"
                title="Receiver Details"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement2we2222"
                        label="{i18n>shippingAddressLabel}"
                    >
                        <f:fields>
                            <Input
                                value="{path: 'shippingAddress', mode: 'sap.ui.model.BindingMode.OneWay'}"
                                id="shippingAddress"
                                change="onInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElementpackageCreationAt"
                        label="{i18n>packageReceiverLabel}"
                    >
                        <f:fields>
                            <ComboBox
                                id="_IDGenComboBox1"
                                items="{/Users}"
                                selectionChange="onSelectChange"
                                change="onComboBoxChange"
                                selectedKey="{path: 'receiver_ID', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            >
                                <core:Item
                                    id="_IDGenItem1"
                                    key="{ID}"
                                    text="{first_name} {last_name}"
                                />
                            </ComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>

    <f:Form
        id="packageDetailsForm"
        editable="false"
        visible="false"
    >
        <f:layout>
            <f:ResponsiveGridLayout
                id="_IDGenResponsiveGridLayout12333"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="true"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            />
        </f:layout>
        <f:formContainers>
            <!-- Left Side: Package Info -->
            <f:FormContainer
                id="_IDGenFormContainer15"
                title="{i18n>packageInfoTitle}"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement125"
                        label="{i18n>packageStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus5"
                                class="customStatus"
                                text="{shippingStatus}"
                                icon="sap-icon://shipping-status"
                                state="{path: 'shippingStatus', formatter: '.stateFormatter'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement55"
                        label="{i18n>packageIDLabel}"
                        visible="false"
                    >
                        <f:fields>
                            <Label
                                id="packageIDLabel"
                                text="{ID}"
                                visible="false"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement555555"
                        label="{i18n>packageNumberLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageNumberLabel"
                                text="{path: 'packageNumber', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement555"
                        label="{i18n>packageWeightLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageWeightLabel"
                                text="{weight}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement55555"
                        label="{i18n>packageHeightLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageHeightLabel"
                                text="{height}"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>

            <!-- Right Side: Package Destination and Receiver Details -->
            <f:FormContainer
                id="_IDGenFormContainer55"
                title="Receiver Details"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement545"
                        label="{i18n>shippingAddressLabel}"
                    >
                        <f:fields>
                            <Label
                                id="shippingAddressLabel"
                                text="{path: 'shippingAddress', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElementpackageReceiver"
                        label="{i18n>packageReceiverLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageReceiverLabel"
                                text="{receiver/first_name} {receiver/last_name}"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</core:FragmentDefinition>
