<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <f:Form
        id="FormDisplay354wideDual2"
        editable="false"
    >
        <f:layout>
            <f:ResponsiveGridLayout
                id="_IDGenResponsiveGridLayout12"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="true"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            />
        </f:layout>

        <f:formContainers>
            <!-- Left Side: Package Info -->
            <f:FormContainer
                id="_IDGenFormContainer12"
                title="{i18n>packageInfoTitle}"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement12"
                        label="{i18n>packageInfoTitle}"
                        visible="false"
                    >
                        <f:fields>
                            <Text
                                text="{ID}"
                                id="packageID"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22"
                        label="{i18n>packageNumberLabel}"
                    >
                        <f:fields>
                            <Text
                                text="{packageNumber}"
                                id="packageNumber"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2222"
                        label="{i18n>packageWeightLabel}"
                    >
                        <f:fields>
                            <Text
                                text="{weight}"
                                id="packageWeight"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22222"
                        label="{i18n>packageHeightLabel}"
                    >
                        <f:fields>
                            <Text
                                text="{height}"
                                id="packageHeight"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>

            <f:FormContainer
                id="_IDGenFormContainer1222"
                title=" "
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement122"
                        label="{i18n>shippingStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus1"
                                text="{path: 'shippingStatus', formatter: '.textFormatter'}"
                                class="customStatus"
                                icon="sap-icon://shipping-status"
                                state="{path: 'shippingStatus', formatter: '.stateFormatter'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement1242"
                        label="{i18n>packageStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus2"
                                text="{path: 'packageStatus', formatter: '.textFormatter'}"
                                class="customStatus"
                                icon="{path: 'packageStatus', formatter: '.iconFormatter'}"
                                state="{path: 'packageStatus', formatter: '.packageFormatter'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22222222"
                        label="{i18n>userConfirmationLabel}"
                    >
                        <f:fields>
                            <Image
                                id="_IDGenImage12"
                                src="{signature}"
                                width="200px"
                                height="100px"
                                alt="Signature"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</core:FragmentDefinition>
