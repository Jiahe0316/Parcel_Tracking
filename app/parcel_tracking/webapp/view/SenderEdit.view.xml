<mvc:View
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:ff="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:t="sap.ui.table"
    xmlns:trm="sap.ui.table.rowmodes"
    controllerName="parceltracking.controller.SenderEdit"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <f:ShellBar
                id="_IDGenShellBar1"
                title="Package Tracking Service"
                showMenuButton="true"
                homeIcon="img/logo.png"
                showCopilot="true"
                showNotifications="true"
                menuButtonPressed="onMenuButtonPress"
                notificationsNumber="2"
            >
                <f:profile>
                    <Avatar
                        id="_IDGenAvatar1"
                        initials="UI"
                    />
                </f:profile>
            </f:ShellBar>
        </tnt:header>
        <tnt:sideContent>
            <core:Fragment
                fragmentName="parceltracking.view.SideNavigation"
                id="fragment"
                type="XML"
            />
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="Sender_Edit"
            >
                <pages>
                    <Page
                        id="Sender_Edit"
                        title="{i18n>editTitle}"
                        showNavButton="true"
                        navButtonPress=".onNavBack"
                        enableScrolling="true"
                    >
                        <core:Fragment
                            fragmentName="parceltracking.view.SenderEdit"
                            id="SenderEditFragment"
                            type="XML"
                        />
    <footer>
      <OverflowToolbar id="_IDGenOverflowToolbar1">
        <content>
          <ToolbarSpacer id="_IDGenToolbarSpacer1" />
          <Button id="onCancel" text="Cancel" press="onCancel" icon="sap-icon://cancel" class="floatLeft"/>

           <Button id="updateStatusButton" tooltip="Update delivery status" icon="sap-icon://action" text="Update status" type="Emphasized" 
                        press="onUpdateStatus" ariaLabelledBy="actionButtonLabel" class="responsiveButton customButton" enabled="false"/>
                  <Button id="onSubmit" text="Submit" press="onSubmit" icon="sap-icon://complete" type="Emphasized" 
                         ariaLabelledBy="actionButtonLabel" class="responsiveButton customButton"  visible="false" />
        </content>
      </OverflowToolbar>
    </footer>
                    </Page>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
