    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    controllerName="parceltracking.controller.ReceiverDetail"
>
    <Page
        id="editPage"
        title="Detail"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
