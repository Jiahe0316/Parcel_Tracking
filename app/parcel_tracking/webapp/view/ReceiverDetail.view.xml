        <!-- Status Section -->
        <uxap:ObjectPageLayout id="objectPageLayout">
            <uxap:headerTitle>
                <uxap:ObjectPageHeader
                    id="_IDGenObjectPageHeader1"
                    objectTitle="Package: {ID}"
                />
            </uxap:headerTitle>

            <uxap:sections>
                <!-- Status Section -->
                <uxap:ObjectPageSection
                    id="_IDGenObjectPageSection1"
                    title="Status"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="_IDGenObjectPageSubSection1"
                        >
                            <uxap:blocks>
                                <VBox
                                    id="_IDGenVBox1"
                                    class="responsiveVBox"
                                >
                                    <HBox
                                        id="_IDGenHBox1"
                                        justifyContent="SpaceBetween"
                                        class="responsiveHBox"
                                    />
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>

                <!-- Package Section -->
                <uxap:ObjectPageSection id="_IDGenObjectPageSection3">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="_IDGenObjectPageSubSection3"
                            title="Package Detail"
                            titleUppercase="true"
                        >
                            <uxap:blocks>
                                <VBox
                                    id="_IDGenVBox5"
                                    class="sapUiSmallMargin responsiveVBox"
                                >
                                    <f:Form
                                        id="FormDisplay354wideDual2"
                                        editable="false"
                                    >
                                        <f:layout>
                                            <f:ResponsiveGridLayout
                                                id="_IDGenResponsiveGridLayout12"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="4"
                                                labelSpanS="12"
                                                adjustLabelSpan="true"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            />
                                        </f:layout>
                                        <f:formContainers>
                                            <!-- Left Side: Package Info -->
                                            <f:FormContainer
                                                id="_IDGenFormContainer12"
                                                title="Package Info"
                                            >
                                                <f:formElements>
                                                    <f:FormElement
                                                        id="_IDGenFormElement122"
                                                        label="Package status"
                                                    >
                                                        <f:fields>
                                                            <ObjectStatus
                                                                id="_IDGenObjectStatus1"
                                                                class="sapMObjectStatusLarge customObjectStatus"
                                                                text="{status}"
                                                                icon="sap-icon://shipping-status"
                                                                state="{path: 'status', formatter: '.stateFormatter'}"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                    <f:FormElement
                                                        id="_IDGenFormElement12"
                                                        label="Package ID"
                                                    >
                                                        <f:fields>
                                                            <Text
                                                                text="{ID}"
                                                                id="packageID"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                    <f:FormElement
                                                        id="_IDGenFormElement22"
                                                        label="Package Number"
                                                    >
                                                        <f:fields>
                                                            <Text
                                                                text="{packageNumber}"
                                                                id="packageNumber"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                    <f:FormElement
                                                        id="_IDGenFormElement2222"
                                                        label="Package Weight"
                                                    >
                                                        <f:fields>
                                                            <Text
                                                                text="{weight}"
                                                                id="packageWeight"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                    <f:FormElement
                                                        id="_IDGenFormElement22222"
                                                        label="Package Height"
                                                    >
                                                        <f:fields>
                                                            <Text
                                                                text="{height}"
                                                                id="packageHeight"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                    <f:FormElement
                                                        id="_IDGenFormElementUpdateStatus"
                                                    >
                                                        <f:fields>
                                                            <Button
                                                                id="updateStatusButton"
                                                                tooltip="Update delivery status"
                                                                icon="sap-icon://action"
                                                                text="Update status"
                                                                type="Emphasized"
                                                                press="onUpdateStatus"
                                                                ariaLabelledBy="actionButtonLabel"
                                                                class="responsiveButton"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                        </f:formContainers>
                                    </f:Form>

                                    <HBox id="toggleableButtonSection">
                                        <Button
                                            id="_IDGenButton1"
                                            text="Order Received"
                                            press="onOrderReceived"
                                            ariaDescribedBy="genericButtonDescription acceptButtonDescription"
                                        />
                                        <Button
                                            id="_IDGenButton2"
                                            text="Order Damaged"
                                            press="onOrderDamaged"
                                            ariaDescribedBy="genericButtonDescription rejectButtonDescription"
                                        />
                                    </HBox>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>
    </Page>
</mvc:View>
