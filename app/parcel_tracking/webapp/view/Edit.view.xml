  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:uxap="sap.uxap"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  controllerName="parceltracking.controller.Edit">
  <Page id="editPage" title="{i18n>editTitle}"
  showNavButton="true" 
  navButtonPress=".onNavBack">
