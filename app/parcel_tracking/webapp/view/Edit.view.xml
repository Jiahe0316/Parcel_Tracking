<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="parceltracking.controller.Edit">
  <Page id="editPage" title="{i18n>editTitle}"
  showNavButton="true" 
  navButtonPress=".onNavBack">
    <content>
      <VBox id="createVbox" >
        <Input id="packageNumber" value="{packageNumber}" placeholder="Package Number" />
        <Input id="receiverId" value="{receiver_ID}" placeholder="Receiver" />
        <Input id="shippingAddress" value="{shippingAddress}" placeholder="Shipping Address" />
        <Button id="_IDGenButton1" text="Save" press=".onSave" />
        <Button id="_IDGenButton2" text="Delete" press=".onDelete" />
      </VBox>
    </content>
  </Page>
</mvc:View>