<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form"
  controllerName="parceltracking.controller.Edit">
  
  <Page id="editPage" title="{i18n>editTitle}" showNavButton="true" navButtonPress=".onNavBack">
   <HBox id="_IDGenHBox1" justifyContent="End" class="responsiveHBox">

    <ToggleButton
        id="_IDGenToggleButton1"
        text="Currently exited edit mode"
        icon="sap-icon://edit"
        press="onEditPress" />
</HBox>
    <f:Form id="FormDisplay354wideDual2" editable="false">
      <f:layout>
        <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout12"
          labelSpanXL="4"
          labelSpanL="4"
          labelSpanM="4"
          labelSpanS="12"
          adjustLabelSpan="true"
          emptySpanXL="0"
          emptySpanL="0"
          emptySpanM="0"
          emptySpanS="0"
          columnsXL="2"
          columnsL="2"
          columnsM="1"
          singleContainerFullSize="false" />
      </f:layout>
      
      <f:formContainers>
      
        <!-- Left Side: Package Info -->
        <f:FormContainer id="_IDGenFormContainer12" title="Package Info">
          <f:formElements>
              <f:FormElement id="_IDGenFormElement122" label="Package status">
              <f:fields>
                <ObjectStatus
                    id="_IDGenObjectStatus1"
                 class="sapMObjectStatusLarge customObjectStatus"
                    text="{status}"
                    icon="sap-icon://shipping-status"
                    state="{path: 'status', formatter: '.stateFormatter'}" />
              </f:fields>
            </f:FormElement>
            <f:FormElement id="_IDGenFormElement12" label="Package ID">
              <f:fields>
                <Input value="{ID}" id="packageID" />
              </f:fields>
            </f:FormElement>
            <f:FormElement id="_IDGenFormElement22" label="Package Number">
              <f:fields>
                <Input value="{packageNumber}" id="packageNumber" />
              </f:fields>
            </f:FormElement>
            <f:FormElement id="_IDGenFormElement2222" label="Package Weight">
              <f:fields>
                <Input value="{weight}" id="packageWeight" />
              </f:fields>
            </f:FormElement>
            <f:FormElement id="_IDGenFormElement22222" label="Package Height">
              <f:fields>
                <Input value="{height}" id="packageHeight" />
              </f:fields>
            </f:FormElement>
             <f:FormElement id="_IDGenFormElementUpdateStatus">
              <f:fields>
                <Button id="updateStatusButton" tooltip="Update delivery status" icon="sap-icon://action" text="Update status" type="Emphasized" 
                        press="onUpdateStatus" ariaLabelledBy="actionButtonLabel" class="responsiveButton" />
              </f:fields>
            </f:FormElement>
          </f:formElements>
        </f:FormContainer>

        <!-- Right Side: Package Destination and Receiver Details -->
        <f:FormContainer id="_IDGenFormContainer1222" title="Receiver Details">
          <f:formElements>
      <f:FormElement id="_IDGenFormElement2we2222" label="Shipping Address">
              <f:fields>
                <Input value="{shippingAddress}" id="shippingAddress" />
              </f:fields>
            </f:FormElement>
            <f:FormElement id="_IDGenFormElementpackageCreationAt" label="Package Receiver">
              <f:fields>
                <ComboBox id="_IDGenComboBox1" items="{/Users}" selectionChange="onSelectChange" selectedKey="{receiver_ID}">
  <core:Item id="_IDGenItem1" key="{ID}" text="{first_name} {last_name}" />
</ComboBox>
              </f:fields>
            </f:FormElement>
          </f:formElements>    
        </f:FormContainer>
      </f:formContainers>
    </f:Form>

    <footer>
      <OverflowToolbar id="_IDGenOverflowToolbar1">
        <content>
          <ToolbarSpacer id="_IDGenToolbarSpacer1" />
          <Button id="onCancel" text="Cancel" press="onCancel" icon="sap-icon://cancel"/>
          <Button id="onSubmit" text="Submit" press="onSubmit" icon="sap-icon://complete"/>
        </content>
      </OverflowToolbar>
    </footer>
  </Page>
</mvc:View>
