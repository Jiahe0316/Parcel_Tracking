   <!-- Status Section -->
 <uxap:ObjectPageLayout id="objectPageLayout">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader id="_IDGenObjectPageHeader1" objectTitle="Package Detail" />
        </uxap:headerTitle>

        <uxap:sections>
            <!-- Status Section -->
     <uxap:ObjectPageSection id="_IDGenObjectPageSection1" title="Status">
    <uxap:subSections>
        <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection1">
            <uxap:blocks>
                <VBox id="_IDGenVBox1">
                    <HBox id="_IDGenHBox1" justifyContent="SpaceBetween">
                        <ObjectStatus
                            id="_IDGenObjectStatus1"
                            class="sapMObjectStatusLarge"
                            title="Package status"
                            text="{status}"
                            icon="sap-icon://shipping-status"
                            state="{path: 'status', formatter: '.stateFormatter'}" />
                        
                        <ToggleButton
                            id="_IDGenToggleButton1"
                            text="Currently exited edit mode"
                            icon="sap-icon://edit"
                            press="onEditPress" />

                    </HBox>
                         <Button id="_IDGenButton12" icon="sap-icon://action" text="Update status" type="Emphasized" press="onUpdateStatus" ariaLabelledBy="actionButtonLabel"/>
				
                </VBox>
            </uxap:blocks>
        </uxap:ObjectPageSubSection>
    </uxap:subSections>
</uxap:ObjectPageSection>

      <!-- Package Section -->
       <uxap:ObjectPageSection id="_IDGenObjectPageSection3" title="Package Details">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection3">
                        <uxap:blocks>
                          <VBox id="_IDGenVBox5" class="sapUiSmallMargin">
                            <f:Form id="FormDisplay354wideDual2"
                              editable="false">
                              <f:layout>
                              <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout12"
                                                labelSpanXL="4"
                                                labelSpanL="3"
                                                labelSpanM="4"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="4"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="1"
                                                columnsM="1"
                                                singleContainerFullSize="false" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer id="_IDGenFormContainer12" title="Package Info">
                                <f:formElements>
                                    <f:FormElement id="_IDGenFormElement12" label="Package ID">
                                        <f:fields>
                                            <Input value="{ID}" id="packageID" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement22" label="Package Number">
                                        <f:fields>
                                            <Input value="{packageNumber}" id="packageNumber" />
                                        </f:fields>
                                    </f:FormElement>
                                     <f:FormElement id="_IDGenFormElement2we2222" label="Shipping Address">
                                        <f:fields>
                                      <Input value="{shippingAddress}" id="shippingAddress" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer id="_IDGenFormContainer122" title="Package Dimensions">
                                <f:formElements>
                                  <f:FormElement id="_IDGenFormElement2222" label="Package Weight">
                                        <f:fields>
                                            <Input value="{weight}" id="packageWeight" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement22222" label="Package Height">
                                        <f:fields>
                                            <Input value="{height}" id="packageHeight" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>

                               <f:FormContainer id="_IDGenFormContainer1222" title="Other Package Detail">
                                <f:formElements>
                                  <f:FormElement id="_IDGenFormElementpackageCreationAt" label="Package Creation Date">
                                        <f:fields>
                                            <Input value="{createdAt}" id="packageCreationAt" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElementpackageCreationBy" label="Package Created By">
                                        <f:fields>
                                            <Input value="{createdBy}" id="packageCreationBy" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElementpackageModifiedAt" label="Package Modified Date">
                                        <f:fields>
                                            <Input value="{modifiedAt}" id="packageModifiedAt" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElementpackageModifiedBy" label="Package Created By">
                                        <f:fields>
                                            <Input value="{modifiedBy}" id="packageModifiedBy" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                  
                               
                                
                            </f:FormContainer>
                              </f:formContainers>
                            </f:Form>
                          </VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Receiver Details Section -->
            <uxap:ObjectPageSection id="_IDGenObjectPageSection2" title="Receiver Details">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection2">
                        <uxap:blocks>
                          <VBox id="_IDGenVBox4" class="sapUiSmallMargin">
                            <f:Form id="FormDisplay354wideDual"
                              editable="false">
                              <f:layout>
                              <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout1"
                                                labelSpanXL="4"
                                                labelSpanL="3"
                                                labelSpanM="4"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="4"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="1"
                                                columnsM="1"
                                                singleContainerFullSize="false" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer id="_IDGenFormContainer1" title="Package Receiver">
                                <f:formElements>
                                    <f:FormElement id="_IDGenFormElement1" label="Selected Receiver">
                                        <f:fields>
                                            <Select id="_IDGenSelect1" items="{/Users}"  change="onSelectChange" selectedKey="{receiver_ID}">
                                              <core:Item id="_IDGenItem1" key="{ID}" text="{first_name} {last_name}" />
                                           </Select>
                                        </f:fields>
                                    </f:FormElement>
                        
                                </f:formElements>
                            </f:FormContainer>
                             <f:FormContainer id="_IDGenFormContainer212" title="Receiver Info">
                                <f:formElements>
                                <f:FormElement id="_IDGenFormElement122" label="First Name">
                                    <f:fields>
                                        <Label id="userFirstName" text="{receiver/first_name}" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement id="_IDGenFormElement222" label="Last Name">
                                    <f:fields>
                                        <Label id="userLastName" text="{receiver/last_name}" />
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                            </f:FormContainer>
                              </f:formContainers>
                            </f:Form>
                          </VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

          
        </uxap:sections>
    </uxap:ObjectPageLayout>
    		<footer>
			<OverflowToolbar id="_IDGenOverflowToolbar1">
				<content>
					<ToolbarSpacer id="_IDGenToolbarSpacer1" />
					<Button id="onCancel" text="Cancel" press="onCancel" icon="sap-icon://cancel"/>
					<Button id="onSubmit" text="Submit" press="onSubmit" icon="sap-icon://complete"/>
				</content>
			</OverflowToolbar>
		</footer>
   
  </Page>
</mvc:View>